/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "AD5933.h"
#include "platform.h"
#include "xparameters.h"
#include "sleep.h"
#include "xgpio.h"

#include "xiic.h"
//#include "xintc.h"
#include "xil_exception.h"
//#include "xiic_l.h"

#define SEL0 0b0001
#define SEL1 0b0010
#define SEL2 0b0100
#define SEL3 0b1000

#define GPIO_EXAMPLE_DEVICE_ID  XPAR_GPIO_0_DEVICE_ID
#define LED_DELAY     10000000

#define LED_CHANNEL 1

XGpio Gpio;

int main()
{
	int Status;
	char in;

    init_platform();

	Status = XGpio_Initialize(&Gpio, GPIO_EXAMPLE_DEVICE_ID);
	if (Status != XST_SUCCESS) {
		xil_printf("Gpio Initialization Failed\r\n");
		return XST_FAILURE;
	}

	XGpio_SetDataDirection(&Gpio, LED_CHANNEL, 0);

	XGpio_DiscreteWrite(&Gpio, LED_CHANNEL, SEL0);

    while (getchar() != 'S'){}	//wait for input


    print("Pmod IA : Impedance Converter Program.\n\r");

    //Calibrate AD5933 with x resistor (41K now)
    calibration();
    //measureImpedance();
   // xil_printf("Replace component for new measurement and press any key\n\r");
    while(1){
    in = getchar();
		if (getchar() == 'A' || getchar() == 'B' || getchar() == 'C' || getchar() == 'D' && getchar() != 0)		//wait for input
		{
			switch (in)
				{
				case 'A' :  XGpio_DiscreteWrite(&Gpio, LED_CHANNEL, SEL0);
							break;
				case 'B' :  XGpio_DiscreteWrite(&Gpio, LED_CHANNEL, SEL1);
							break;
				case 'C' :  XGpio_DiscreteWrite(&Gpio, LED_CHANNEL, SEL2);
							break;
				case 'D' :  XGpio_DiscreteWrite(&Gpio, LED_CHANNEL, SEL3);
							break;
				}
			measureImpedance();
		}
    }

    cleanup_platform();
    return 0;
}
